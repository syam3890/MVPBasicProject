<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/darker_gray</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearLayout" parent="MatchMatch">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/activity_padding</item>
    </style>

    <style name="Button" parent="MatchWrap">
        <item name="android:layout_margin">@dimen/bottom_margin</item>
        <item name="android:background">@drawable/buttonbackground</item>
    </style>

    <style name="Button.SignIn">
        <item name="android:text">@string/sign_in</item>
    </style>

    <style name="Button.SignUp">
        <item name="android:text">@string/sign_up</item>
    </style>

    <style name="LogoImage" parent="MatchWrap">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:src">@android:drawable/sym_def_app_icon</item>
    </style>

    <style name="EditText" parent="MatchWrap">
        <item name="android:background">@drawable/buttonbackground</item>
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:textColorHint">@android:color/holo_green_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">@dimen/bottom_margin</item>
    </style>

    <style name="EditText.Mobile">
        <item name="android:hint">Mobile</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">10</item>
    </style>

    <style name="EditText.Password">
        <item name="android:hint">Password</item>
        <item name="android:inputType">textPassword</item>
    </style>


</resources>
